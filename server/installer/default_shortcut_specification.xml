<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
	<programGroup defaultName="$APP_NAME $APP_VER" location="applications" />
  
	<shortcut
	name="$APP_NAME $APP_VER Server"
	target="$INSTALL_PATH\Mirth.exe" 
	workingDirectory="$INSTALL_PATH"
	description="Start the $APP_NAME Server"
	initialState="normal"
	programGroup="yes"
	desktop="yes"
	applications="no"
	startMenu="no"
	startup="no">
	<createForPack name="Core" />
	</shortcut>
  
	<shortcut
	name="$APP_NAME $APP_VER Administrator"
	target="javaws" 
	commandLine="http://localhost:8080/webstart"
	workingDirectory="$INSTALL_PATH"
	description="Start the $APP_NAME Administrator"
	iconFile="$INSTALL_PATH\Mirth.ico"
	initialState="normal"
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="no">
	<createForPack name="Core" />
	</shortcut>

	<shortcut
	name="$APP_NAME Server Manager"
	target="$INSTALL_PATH\Mirth Manager.exe" 
	workingDirectory="$INSTALL_PATH"
	description="Start the $APP_NAME Server Manager"
	initialState="normal"
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="yes">
	<createForPack name="Server Manager" />
	</shortcut>
  
	<shortcut
    name="$APP_NAME Shell"
    target="$INSTALL_PATH\Shell.bat" 
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Start $APP_NAME Shell"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Shell" />
	</shortcut>
  
	<shortcut
	name="Uninstaller"
	target="$INSTALL_PATH\Uninstaller\uninstaller.jar"     
	commandLine=""
	description="Mirth uninstaller"
	iconFile="%SystemRoot%\system32\SHELL32.dll"
	iconIndex="31" 
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="no">
	<createForPack name="Core" />
	</shortcut> 
</shortcuts>