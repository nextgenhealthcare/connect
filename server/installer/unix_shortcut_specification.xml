<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
	<programGroup defaultName="$APP_NAME" location="applications" />
  
	<shortcut
	name="$APP_NAME Server"
	target="$INSTALL_PATH/mirth.sh" 
	workingDirectory="$INSTALL_PATH"
	description="Start the $APP_NAME Server"
	initialState="normal"
	programGroup="yes"
	desktop="yes"
	applications="no"
	startMenu="no"
	startup="no"
	terminal="true">
	<createForPack name="Core" />
	</shortcut>
  
	<shortcut
  name="$APP_NAME Shell"
  target="$INSTALL_PATH/Shell.sh" 
  commandLine=""
  workingDirectory="$INSTALL_PATH"
  description="Start $APP_NAME Shell"
  initialState="normal"
  programGroup="yes"
  desktop="no"
  applications="no"
  startMenu="no"
  startup="no"
  terminal="true">
  <createForPack name="Shell" />
  </shortcut>
  
	<shortcut
	name="Uninstaller"
	target="$INSTALL_PATH/Uninstaller/uninstaller.jar"     
	commandLine="java -jar"
	description="Mirth uninstaller"
	iconFile="$INSTALL_PATH/uninstall.ico"
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="no">
	<createForPack name="Core" />
	</shortcut> 
</shortcuts>