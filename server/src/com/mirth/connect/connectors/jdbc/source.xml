<connectorMetaData path="jdbc">
	<name>Database Reader</name>
	<author>Mirth Corporation</author>
	<pluginVersion>@mirthversion</pluginVersion>
	<mirthVersion>2.0.0</mirthVersion>
	<url>http://www.mirthcorp.com</url>
	<description>This connector allows Mirth to poll any supported JDBC-compatabile database for data. Rows are returned as XML and JavaScript can be used for advanced logic.</description>
	<clientClassName>com.webreach.mirth.connectors.jdbc.DatabaseReader</clientClassName>
	<serverClassName>com.webreach.mirth.connectors.jdbc.JdbcConnector</serverClassName>
	<sharedClassName>com.webreach.mirth.connectors.jdbc.DatabaseReaderProperties</sharedClassName>
	<serviceClassName>com.webreach.mirth.connectors.jdbc.JdbcConnectorService</serviceClassName>
	<library path="jdbc-client.jar">
		<type>CLIENT</type>
	</library>
	<library path="jdbc-shared.jar">
		<type>SHARED</type>
	</library>
	<library path="jdbc-server.jar">
		<type>SERVER</type>
	</library>
	<transformers>ResultMapToXML</transformers>
	<protocol>jdbc</protocol>
	<type>SOURCE</type>
	<enabled>true</enabled>
	<mule-properties>
		<property name="connector">com.webreach.mirth.connectors.jdbc.JdbcConnector</property>
		<property name="dispatcher.factory">com.webreach.mirth.connectors.jdbc.JdbcMessageDispatcherFactory</property>
		<property name="message.receiver">com.webreach.mirth.connectors.jdbc.JdbcMessageReceiver</property>
		<property name="message.adapter">com.webreach.mirth.connectors.jdbc.JdbcMessageAdapter</property>
		<property name="endpoint.builder">com.webreach.mirth.connectors.jdbc.JdbcEndpointBuilder</property>
	</mule-properties>
</connectorMetaData>