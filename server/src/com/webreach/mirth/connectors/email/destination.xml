<connectorMetaData path="email">
	<name>Email Sender</name>
	<author>WebReach, Inc.</author>
	<pluginVersion>@mirthversion</pluginVersion>
	<mirthVersion>1.7.1</mirthVersion>
	<url>http://extensions.mirthproject.org</url>
	<description>This connector allows Mirth to send Email messages via SMTP. The velocity template engine is available to dynamically create messages.</description>
	<clientClassName>com.webreach.mirth.connectors.email.EmailSender</clientClassName>
	<serverClassName>com.webreach.mirth.connectors.email.SmtpConnector</serverClassName>
	<sharedClassName>com.webreach.mirth.connectors.email.EmailSenderProperties</sharedClassName>
	<library path="email-client.jar">
		<type>CLIENT</type>
	</library>
	<library path="email-shared.jar">
		<type>SHARED</type>
	</library>
	<library path="email-server.jar">
		<type>SERVER</type>
	</library>
	<transformers></transformers>
	<protocol>smtp</protocol>
	<type>DESTINATION</type>
	<enabled>true</enabled>
	<mule-properties>
		<property name="connector">com.webreach.mirth.connectors.email.SmtpConnector</property>
		<property name="dispatcher.factory">com.webreach.mirth.connectors.email.SmtpMessageDispatcherFactory</property>
		<property name="message.adapter">com.webreach.mirth.connectors.email.MailMessageAdapter</property>
		<property name="inbound.transformer">com.webreach.mirth.connectors.email.transformers.EmailMessageToString</property>
		<property name="outbound.transformer">com.webreach.mirth.connectors.email.transformers.MessageObjectToEmailMessage</property>
		<property name="endpoint.builder">org.mule.impl.endpoint.UrlEndpointBuilder</property>
	</mule-properties>
</connectorMetaData>