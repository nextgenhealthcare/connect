<project name="mirth">
	<property name="RELEASE_VERSION" value="${version}" />
	<property name="SERVER_HOME" value="${server}" />
	<property name="CLIENT_HOME" value="${client}" />
	<property name="MANAGER_HOME" value="${manager}" />

	<target name="create-extensions">
		<ant antfile="${SERVER_HOME}/build.xml" dir="${SERVER_HOME}" target="create-plugins">
			<property name="version" value="${RELEASE_VERSION}" />
		</ant>

		<copy todir="${CLIENT_HOME}/lib">
			<fileset dir="${SERVER_HOME}/extensions/connectors/">
				<include name="*-shared.jar" />
			</fileset>
		</copy>

		<copy file="${SERVER_HOME}/mirth-client-core.jar" todir="${CLIENT_HOME}/lib" />
		<copy file="${SERVER_HOME}/lib/hl7model.jar" todir="${CLIENT_HOME}/lib" />
		<copy file="${SERVER_HOME}/mirth-client-core.jar" todir="${MANAGER_HOME}/lib" />
	</target>

	<target name="create-client" depends="create-extensions">
		<ant antfile="${CLIENT_HOME}/ant-build.xml" dir="${CLIENT_HOME}" target="create-client" />

		<copy file="${CLIENT_HOME}/dist/mirth-client.jar" todir="${SERVER_HOME}/client-lib/" />

		<copy todir="${SERVER_HOME}/extensions/connectors/">
			<fileset dir="${CLIENT_HOME}/dist/connectors/">
				<include name="*.jar" />
			</fileset>
		</copy>

		<copy todir="${SERVER_HOME}/extensions/plugins/">
			<fileset dir="${CLIENT_HOME}/dist/plugins/">
				<include name="*.jar" />
			</fileset>
		</copy>

		<copy file="${SERVER_HOME}/mirth-client-core.jar" todir="${SERVER_HOME}/client-lib/" />

		<copy todir="${SERVER_HOME}/client-lib">
			<fileset dir="${CLIENT_HOME}/lib">
				<exclude name="*-shared.jar" />
			</fileset>
		</copy>
	</target>

	<target name="create-manager" depends="create-client">
		<ant antfile="${MANAGER_HOME}/ant-build.xml" dir="${MANAGER_HOME}" target="create-manager" />
	</target>

	<target name="create-setup" depends="create-manager">
		<ant antfile="${SERVER_HOME}/build.xml" dir="${SERVER_HOME}" target="create-setup">
			<property name="version" value="${RELEASE_VERSION}" />
		</ant>
	</target>

	<target name="create-dist" depends="create-manager">
		<copy file="${MANAGER_HOME}/dist/mirth-manager.jar" todir="${SERVER_HOME}/" />
		<copy todir="${SERVER_HOME}/lib">
			<fileset dir="${MANAGER_HOME}/lib">
				<exclude name="mirth-client.jar" />
			</fileset>
		</copy>

		<ant antfile="${SERVER_HOME}/build.xml" dir="${SERVER_HOME}" target="create-dist">
			<property name="version" value="${RELEASE_VERSION}" />
		</ant>
	</target>
</project>
